<h1>Listing good_deeds</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Good guy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @good_deeds.each do |good_deed| %>
      <tr>
        <td><%= good_deed.title %></td>
        <td><%= good_deed.good_guy %></td>
        <td><%= link_to 'Show', good_deed %></td>
        <td><%= link_to 'Edit', edit_good_deed_path(good_deed) %></td>
        <td><%= link_to 'Destroy', good_deed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Good deed', new_good_deed_path %>
